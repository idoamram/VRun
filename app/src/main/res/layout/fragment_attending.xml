<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frg_attending_swipeRefreshLayout"
    tools:context="com.drukido.vrun.ui.AttendingActivity$PlaceholderFragment"
    android:tag="attending_fragment_tag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/frg_attending_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_centerInParent="true"/>

        <ProgressBar
            android:id="@+id/frg_attending_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@android:style/Widget.DeviceDefault.ProgressBar"/>
    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>

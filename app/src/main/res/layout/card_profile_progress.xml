<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorPrimary"
        android:id="@+id/card_profile_progress_cardView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/progress_title"
                android:layout_margin="3dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/card_profile_progress_textView_bestDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

                <it.michelelacorte.elasticprogressbar.ElasticDownloadView
                    android:id="@+id/card_profile_progress_elastic_progress_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/card_profile_progress_textView_bestDistance"
                    android:layout_toLeftOf="@+id/card_profile_progress_textView_groupTarget"/>

                <TextView
                    android:id="@+id/card_profile_progress_textView_groupTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/card_profile_progress_textView_allRunsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="(Past attending runs count)"
                android:layout_margin="3dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/card_profile_progress_textView_measuredRunsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="(Measured runs count)"
                android:layout_margin="3dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
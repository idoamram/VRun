<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/run_list_item_swipeLayout">

    <!-- Bottom View Start-->
    <LinearLayout
        android:background="#FF9800"
        android:id="@+id/run_list_item_bottom_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--What you want to show-->
        <com.rey.material.widget.ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/run_list_item_btnAttending"
            android:src="@mipmap/ic_thumb_up_white"
            android:background="@android:color/transparent"/>

        <com.rey.material.widget.ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/run_list_item_btnWatchAttending"
            android:src="@mipmap/ic_supervisor_account_white"
            android:background="@android:color/transparent"/>

        <com.rey.material.widget.ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/run_list_item_btnNotAttending"
            android:src="@mipmap/ic_thumb_down_white"
            android:background="@android:color/transparent"/>

    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/run_list_item_relativeLayout_mainLayout"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/runs_list_item_fields_margin"
            android:id="@+id/run_list_item_txtvTitle"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/run_list_item_txtvTitle"
            android:src="@mipmap/ic_date_range_black"
            android:id="@+id/run_list_item_icon_runDate"
            android:layout_marginTop="@dimen/runs_list_item_fields_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/run_list_item_icon_runDate"
            android:layout_alignBottom="@+id/run_list_item_icon_runDate"
            android:layout_below="@+id/run_list_item_txtvTitle"
            android:id="@+id/run_list_item_txtvDate"
            android:layout_toEndOf="@+id/run_list_item_icon_runDate"
            android:layout_toStartOf="@+id/run_list_item_icon_runTime"
            android:layout_marginStart="@dimen/runs_list_item_fields_margin"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_schedule_black"
            android:id="@+id/run_list_item_icon_runTime"
            android:layout_alignTop="@+id/run_list_item_txtvDate"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/run_list_item_icon_runTime"
            android:layout_alignBottom="@+id/run_list_item_icon_runTime"
            android:id="@+id/run_list_item_txtvTime"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/run_list_item_icon_runTime"
            android:layout_marginStart="@dimen/runs_list_item_fields_margin"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/run_list_item_icon_runDate"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/ic_update_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginStart="@dimen/runs_list_item_fields_margin"
                android:id="@+id/run_list_item_txtvDuration"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/ic_timeline_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginStart="@dimen/runs_list_item_fields_margin"
                android:id="@+id/run_list_item_txtvDistance"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/ic_face_black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginStart="@dimen/runs_list_item_fields_margin"
                android:id="@+id/run_list_item_txtvUserName"/>
        </LinearLayout>

    </RelativeLayout>
    <!-- Surface View End -->

</com.daimajia.swipe.SwipeLayout>
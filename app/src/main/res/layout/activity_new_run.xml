<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.drukido.vrun.ui.NewRunActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/group_details_background"
        android:scaleType="centerCrop"/>

    <com.rey.material.widget.ProgressView
        android:id="@+id/newRun_progressView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressStyle="@style/Material.Drawable.CircularProgress"
        app:pv_progressMode="indeterminate"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/newRun_mainLinearLayout"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/newRun_btnWhen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/when"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="@color/colorRedFailed"/>

        <Button
            android:id="@+id/newRun_btnDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/how_much_in_meters"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="@color/colorRedFailed"/>

        <Button
            android:id="@+id/newRun_btnDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/for_how_long"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="@color/colorRedFailed"/>

        <Button
            android:id="@+id/newRun_btnFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/finish"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="@color/colorOrangeRegular"/>
    </LinearLayout>

</RelativeLayout>
